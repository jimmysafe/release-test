{
  "name": "release-test",
  "version": "1.4.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "release": "release-it"
  },
  "dependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@release-it/conventional-changelog": "^5.1.0",
    "husky": "^8.0.1",
    "release-it": "^15.4.2"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": [
        "git pull origin master"
      ]
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
